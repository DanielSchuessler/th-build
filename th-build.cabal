-- The name of the package.
name:                th-build

-- The package version. See the Haskell package versioning policy
-- (http://www.haskell.org/haskellwiki/Package_versioning_policy) for
-- standards guiding when and how versions should be incremented.
version:             0.4.0.0

-- A short (one-line) description of the package.
synopsis:            More convenient construction of TH ASTs

-- A longer description of the package.
description:
  The main feature here is implicit conversion of arguments to AST constructors: Tired of writing things like
  .
  @
   valD (varP (mkName \"foo\")) (normalB (appE (varE 'not) (conT 'True))) []  
  @
  .
  ? With th-build:
  .
  @
   valD' \"foo\" (appE' 'not 'True) ()
  @
  .
  Hint: Use @()@ for an empty list argument to an autoconverting function, since @[]@ will yield an type ambiguity error.



-- The license under which the package is released.
license:             BSD3

-- The file containing the license text.
license-file:        LICENSE

-- The package author(s).
author:              Daniel Schüssler

-- An email address to which users can send suggestions, bug reports, and
-- patches.
maintainer:          daniels@community.haskell.org

-- A copyright notice.
copyright:          Daniel Schüssler 

category:            Template Haskell

build-type:          Simple

-- Constraint on the version of Cabal needed to build this package.
cabal-version:       >=1.8

homepage: https://github.com/DanielSchuessler/th-build

Source-Repository head
    type: git
    location: git@github.com:DanielSchuessler/th-build.git


library
  -- Modules exported by the library.
  exposed-modules:     
    Language.Haskell.TH.Build
 
  
  -- Modules included in this library but not exported.
  other-modules: 
    Language.Haskell.TH.Build.Extras,
    Language.Haskell.TH.Build.Convertible,
    Language.Haskell.TH.Build.Convertible.Restr,
    Language.Haskell.TH.Build.Wrappers      
  
  -- Other library packages from which modules are imported.
  build-depends:      base >= 4 && < 6, template-haskell == 2.9.0.0
  
